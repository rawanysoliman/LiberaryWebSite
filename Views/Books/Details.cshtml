@model Book
<h2>@Model.Title</h2>
<img src="@Model.ImagePath" style="height: 200px;" />
<p><strong>Author:</strong> @Model.Author?.Name</p>
<p><strong>Category:</strong> @Model.Category?.Name</p>
<p><strong>Published:</strong> @Model.PublishedDate</p>
<p><strong>Description:</strong> @Model.Description</p>

<a asp-action="Index" asp-controller="Books" class="btn btn-primary">Back to List</a>
<a asp-action="AddToWishlist" asp-controller="Books" asp-route-id="@Model.Id" class="btn btn-secondary btn-sm">Add to Wishlist</a>


