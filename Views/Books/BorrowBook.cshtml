@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Borrow Book";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Borrow Book</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                    <!-- if the book has an image, display it -->
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="col-md-4">
                                <img src="@Model.ImagePath" class="img-fluid rounded" alt="@Model.Title">
                            </div>
                        }
                        <div class="col">
                            <h4>@Model.Title</h4>
                            <p><strong>Author:</strong> @Model.Author?.Name</p>
                            <p><strong>Category:</strong> @Model.Category?.Name</p>
                            <p><strong>Published Date:</strong> @Model.PublishedDate.ToShortDateString()</p>
                            <p>@Model.Description</p>
                        </div>
                    </div>

                    <form asp-action="BorrowBook" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="alert alert-info">
                            <p>Are you sure you want to borrow this book?</p>
                            <p>The book will be marked as borrowed and the borrow date will be set to @DateTime.Now.ToString("g")</p>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Confirm Borrow</button>
                            <a asp-action="BookLibrary" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 